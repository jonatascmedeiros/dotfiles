* Mount partitions
	mount /dev/sdaX /mnt
	mkdir -p /mnt/{boot,mnt/{bucket,windows}}
	mount /dev/sdaY /mnt/boot
	mount /dev/sdaZ /mnt/mnt/bucket
	mount /dev/sdaW /mnt/mnt/windows

* Mirrors
	cd /etc/pacman.d
	wget 'archlinux.org/mirrorlist/?country=BR' -O mirrorlist.b
	sed -i 's/^#//' mirrorlist.b
	rankmirrors -n 4 mirrorlist.b > mirrorlist
	pacman -Syy

* Install base
	pacstrap -i /mnt base base-devel intel-ucode ntfs-3g vim

* fstab
	genfstab -U /mnt > /mnt/etc/fstab

* Configuration
	arch-chroot /mnt /bin/bash
	
	vim /etc/locale.gen
	locale-gen
	locale > /etc/locale.conf

	ln -sf /usr/share/zoneinfo/America/Recife /etc/localtime
	hwclock -wu

	passwd
	useradd -m -G wheel jonatas
	passwd jonatas
	visudo

	echo name > /etc/hostname
	vim /etc/hosts

	pacman -S git
	git clone https://github.com/jonatascmedeiros/dotfiles.git /home/jonatas/dotfiles
	cp /home/jonatas/dotfiles/pacman.conf /etc/
	pacman -Syy
  
	systemctl enable fstrim.timer
	cp /home/jonatas/dotfiles/60-schedulers.rules /etc/udev/rules.d/

* Bootloader
	bootctl install
	cp /home/jonatas/dotfiles/arch.conf /boot/loader/entries/
	vim /boot/loader/loader.conf
		timeout	3
		default arch

* Wireless
	pacman -S linux-headers dialog wpa_actiond
	mkdir /opt/rtl8723au
	git clone https://github.com/lwfinger/rtl8723au.git /opt/rtl8723au
	--
	cd /opt/rtl8723au
	make
	make install
	vim /etc/modprobe.d/r8723au.conf
		blacklist	r8723au
		blacklist	rtl8xxxu
	
* Desktop
	pacman -S xorg-server xorg-server-utils xorg-xinit xorg-utils alsa-utils pulseaudio-alsa lib32-libpulse lib32-alsa-plugins
	- intel
		pacman -S xf86-video-intel lib32-mesa-libgl libva-intel-driver libva xf86-input-synaptics
	-nvidia
		pacman -S nvidia lib32-nvidia-libgl
	pacman -S i3 xfce4-terminal rofi
	mkdir -p /home/jonatas/.config/i3
	cd /home/jonatas/dotfiles
	cp i3config toggle_touchpad.sh ../.config/i3/
	mv ../.config/i3/i3config ../.config/i3/config
	cp .xinitrc .X* ../
	cp 50-synaptics.conf /etc/X11/xorg.conf.d/
	chown -R jonatas /home/jonatas/dotfiles
	alsamixer
	systemctl enable netctl-auto@interface.service #interface

* Software
	pacman -S zsh zsh-completions yaourt wget firefox mpv steam flashplugin tmux powerline powerline-fonts feh lxappearance compton ttf-font-awesome ttf-inconsolata
	
	yaourt i3blocks
* Finish
	exit
	cp /etc/netctl/profile /mnt/etc/netctl/ #profile
	umount -R /mnt
	reboot

* Pos-install
	sudo pacman -S gnome-common # for iio-sensor
	yaourt iio-sensor-proxy

	sh -c "$(wget https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"
	git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

* Firefox
	mkdir /home/jonatas/.mozilla/firefox/profile.default/chrome		#profile
	cp /home/jonatas/dotfiles/userChrome.css /home/jonatas/.mozilla/firefox/profile.default/chrome/
	yaourt gtk-theme-numix-solarized
	cp /home/jonatas/dotfiles/.vimperator/ /home/jonatas/

* psd
	yaourt profile-sync-daemon

	mkdir .config/google-chrome/Default/cache
	mv .cache/google-chrome/Default .config/google-chrome/Default/cache
	ln -s .config/google-chrome/Default/cache/Default .cache/google-chrome/Default

	psd
	vim .config/psd/psd.conf
	sudo visudo
		jonatas ALL=(ALL) NOPASSWD: /usr/bin/psd-overlay-helper
	systemctl --user enable psd.service

* Power management
	check sound card: lspci -k
	- Intel
		sudo cp ~/dotfiles/audio_powersave.conf /etc/modprobe.d/
	sudo cp ~/dotfiles/suspend@.service /etc/systemd/system/
	sudo systemctl enable suspend@jonatas.service
