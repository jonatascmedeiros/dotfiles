* Mount partitions
	mount /dev/sdaX /mnt
	mkdir -p /mnt/{boot,mnt/{bucket,windows}}
	mount /dev/sdaY /mnt/boot
	mount /dev/sdaZ /mnt/mnt/bucket
	mount /dev/sdaW /mnt/mnt/windows

* Mirrors
	cd /etc/pacman.d
	wget 'archlinux.org/mirrorlist/?country=BR' -O mirrorlist.b
	sed -i 's/^#//' mirrorlist.b
	rankmirrors -n 4 mirrorlist.b > mirrorlist
	pacman -Syy

* Install base
	pacstrap -i /mnt base base-devel intel-ucode ntfs-3g gvim

* fstab
	genfstab -U /mnt > /mnt/etc/fstab

* Configuration
	arch-chroot /mnt /bin/bash
	
	vim /etc/locale.gen
	locale-gen
	locale > /etc/locale.conf

	ln -sf /usr/share/zoneinfo/America/Recife /etc/localtime
	hwclock -wu

	vim /etc/pacman.conf
		[archlinuxfr]
		SigLevel = Never
		Server = http://repo.archlinux.fr/$arch
	pacman -Syy

	passwd
	useradd -m -G wheel jonatas
	passwd jonatas
	EDITOR=vim visudo

	echo name > /etc/hostname
	vim /etc/hosts

	systemctl enable fstrim.timer
	vim /etc/udev/rules.d/60-schedulers.rules
		ACTION=="add|change", KERNEL=="sd[a-z]", ATTR{queue/rotational}=="0", ATTR{queue/scheduler}="deadline"

* Bootloader
	bootctl install
	vim /boot/loader/entries/arch.conf
		title	Arch Linux
		linux	/vmlinuz-linux
		initrd	/intel-ucode.img
		initrd	/initramfs-linux.img
		options	root=PARTLABEL=arch rw
	vim /boot/loader/loader.conf
		timeout	3
		default arch

* Wireless
	pacman -S git linux-headers
	mkdir /opt/rtl8723au
	git clone https://github.com/lwfinger/rtl8723au.git /opt/rtl8723au
	exit
	umount -R /mnt
	reboot
	cd /opt/rtl8723au
	make
	make install
	vim /etc/modprobe.d/r8723au.conf
		blacklist	r8723au
	reboot
	
* Desktop
	pacman -S xorg-server xorg-xinit
	- intel
		pacman -S xf86-video-intel lib32-mesa-libgl libva xf86-input-synaptics
	-nvidia
		pacman -S nvidia lib32-nvidia-libgl
	pacman -S gnome
	systemctl enable gdm
	systemctl enable NetworkManager.service

* Software
	pacman -S zsh zsh-completions yaourt wget gnome-tweak-tool file-roller transmission-gtk firefox mpv steam flashplugin guake

* Pos-install
	yaourt profile-sync-daemon
	- tablet
		yaourt iio-sensor-proxy
	sh -c "wget https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"
	git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

	mkdir .config/google-chrome/Default/cache
	mv .cache/google-chrome/Default .config/google-chrome/Default/cache
	ln -s .config/google-chrome/Default/cache/Default .cache/google-chrome/Default

	mkdir .mozilla/firefox/2cu9sf8i.default/cache
	mv .cache/mozilla/firefox/2cu9sf8i.default .mozilla/firefox/2cu9sf8i.default/cache
	ln -s .mozilla/firefox/2cu9sf8i.default/cache/2cu9sf8i.default .cache/mozilla/firefox/2cu9sf8i.default

	psd
	vim .config/psd/psd.conf
	sudo visudo
		jonatas ALL=(ALL) NOPASSWD: /usr/bin/psd-overlay-helper
	systemctl --user enable psd.service

