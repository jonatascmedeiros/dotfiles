* Mount partitions
	mount /dev/sdaX /mnt
	mkdir -p /mnt/{boot,mnt/{bucket,windows}}
	mount /dev/sdaY /mnt/boot
	mount /dev/sdaZ /mnt/mnt/bucket
	mount /dev/sdaW /mnt/mnt/windows

* Mirrors
	cd /etc/pacman.d
	wget 'archlinux.org/mirrorlist/?country=BR' -O mirrorlist.b
	sed -i 's/^#//' mirrorlist.b
	rankmirrors -n 4 mirrorlist.b > mirrorlist
	pacman -Syy

* Install base
	pacstrap -i /mnt base base-devel intel-ucode ntfs-3g vim

* fstab
	genfstab -U /mnt > /mnt/etc/fstab

* Configuration
	arch-chroot /mnt /bin/bash
	
	vim /etc/locale.gen
	locale-gen
	locale > /etc/locale.conf

	ln -sf /usr/share/zoneinfo/America/Recife /etc/localtime
	hwclock -wu

	passwd
	useradd -m -G wheel jonatas
	passwd jonatas
	EDITOR=vim visudo

	echo name > /etc/hostname
	vim /etc/hosts

	pacman -Syy
	pacman -S git
	git clone https://github.com/jonatascmedeiros/dotfiles.git /home/jonatas/
	cp /home/jonatas/dotfiles/pacman.conf /etc/
	pacman -Syy
  
	systemctl enable fstrim.timer
	cp /home/jonatas/dotfiles/60-schedulers.rules /etc/udev/rules.d/

* Bootloader
	bootctl install
	cp /home/jonatas/dotfiles/arch.conf /boot/loader/entries/
	vim /boot/loader/loader.conf
		timeout	3
		default arch

* Wireless
	pacman -S linux-headers
	mkdir /opt/rtl8723au
	git clone https://github.com/lwfinger/rtl8723au.git /opt/rtl8723au
	--
	cd /opt/rtl8723au
	make
	make install
	vim /etc/modprobe.d/r8723au.conf
		blacklist	r8723au
	
* Desktop
	pacman -S xorg-server xorg-xinit
	- intel
		pacman -S xf86-video-intel lib32-mesa-libgl libva xf86-input-synaptics
	-nvidia
		pacman -S nvidia lib32-nvidia-libgl
	pacman -S i3 rxvt-unicode rofi alsa-utils
	cp /home/jonatas/dotfiles/.xinitrc /home/jonatas/
	alsamixer

* Software
	pacman -S zsh zsh-completions yaourt wget firefox mpv steam flashplugin 

* Finish
	exit
	umount -R /mnt
	reboot

* Pos-install
	+ as root
		wifi-menu -o
		systemctl enable netctl-auto@wlp0s20u5i2.service
		yaourt iio-sync-daemon

	sh -c "wget https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O -)"
	git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim

* psd
	yaourt profile-sync-daemon

	mkdir .config/google-chrome/Default/cache
	mv .cache/google-chrome/Default .config/google-chrome/Default/cache
	ln -s .config/google-chrome/Default/cache/Default .cache/google-chrome/Default

	psd
	vim .config/psd/psd.conf
	sudo visudo
		jonatas ALL=(ALL) NOPASSWD: /usr/bin/psd-overlay-helper
	systemctl --user enable psd.service

